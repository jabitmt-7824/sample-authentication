<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
    <%- style -%>
</head>
<body>
    <%- include("header"); -%>
    <%- body %>
    <!--    noty show section    -->
    <script>
            <% if (flash.success && flash.success.length > 0) { %>
            new Noty({
                type: "success",
                layout: 'topRight',
                theme: 'mint',
                text:  '<%= flash.success %>',
                timeout: 1500
            }).show();
            <% } %>

            <% if (flash.error && flash.error.length > 0) { %>
            new Noty({
                type: "error",
                layout: 'topRight',
                theme: 'mint',
                text:  '<%= flash.error %>',
                timeout: 1500
            }).show();
            <% } %>
    </script>
</body>
</html>